<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen440"
        android:background="@drawable/shape_popwindow_hint_bg"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:textColor="@color/c60"
            android:layout_marginTop="@dimen/dimen20"
            android:text="提示"
            android:textSize="@dimen/dimen_text32"/>
        <TextView
            android:id="@+id/tvTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/c64"
            android:text=""
            android:textSize="@dimen/dimen_text28"/>
        <TextView
            android:id="@+id/tvButton"
            android:layout_width="@dimen/dimen434"
            android:layout_height="@dimen/dimen68"
            android:gravity="center"
            android:text="确定"
            android:background="@drawable/shape_login"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen26"
            android:textColor="@color/cffffff"
            android:textSize="@dimen/dimen_text28"/>


    </RelativeLayout>

</RelativeLayout>
